<resources>
    <!-- Base application theme. -->
    <style name="Theme.GitHubApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/space_cadet</item>
        <item name="colorSecondaryVariant">@color/space_cadet</item>
        <item name="colorOnSecondary">@color/space_cadet</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="poppinRegular">@color/beige</item>
        <item name="poppinMedium">@color/beige</item>
        <item name="poppinBold">@color/beige</item>
        <item name="bg">@color/black</item>
        <item name="card">@color/space_cadet</item>
        <item name="progressBar"> @color/white</item>
    </style>
</resources>